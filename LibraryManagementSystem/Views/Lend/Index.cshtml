@using LibraryManagementSystem.Models.Entity;
@model List<ACTION_TABLE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Loaned Books</title>
</head>

<h2>List of Loaned Books</h2>

<div>
    <h2 id="tableTitle" style="background-color: lightyellow;">Books</h2>
</div>

<table class="table table-striped;" style="position:center; table-layout: auto;">
    <tr>
        <th>Transaction Id</th>
        <th>Book Name</th>
        <th>Member Name</th>
        <th>Employee ID</th>
        <th>Lend Date</th>
        <th>Return Date</th>
        <th>Return</th>
    </tr>
    @foreach (var action in Model)
    {
        <tr>
            <td>@action.ID</td>
            <td>@action.BOOK_TABLE.NAME</td>
            <td>@action.MEMBER_TABLE.NAME</td>
            <td>@action.EMPLOYEE </td>
            <td>@Convert.ToDateTime(action.BORROWDATE).ToString("dd/MM/yy") </td>
            <td>@Convert.ToDateTime(action.RETURNDATE).ToString("dd/MM/yy")</td>
            <td><a href="/Lend/ReturnBook/@action.ID" class="btn btn-info" style="background-color:darkseagreen;color:black">Return Book</a></td>
        </tr>
    }
</table>
<br />
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert" style="width:50%;text-align:center;margin:auto">
        <b>No books found.</b>
    </div>
}