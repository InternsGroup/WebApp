@using LibraryManagementSystem.Models.Entity
@model List<AUTHOR_TABLE>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Authors</title>
</head>

<div>
    <h2 id="tableTitle" style="background-color:lightyellow;">Authors</h2>
</div>

<table class ="table table-striped;" style="position:center; table-layout: auto; background-color:lightgray;">
    <tr style="background-color:greenyellow;">
        <th >Author Id</th>
        <th >Author Name</th>
        <th >Author Surname</th>
        <th >Author Detail</th>
        <th >Delete Author</th>
        <th >Update Author</th>
    </tr>
    @foreach (var author in Model)
    {
        <tr>
            <td >@author.ID</td>
            <td >@author.NAME</td>
            <td >@author.SURNAME</td>
            <td  id="tableDataOverFlow">@author.DETAIL</td>
            <td ><a href="/Author/DeleteAuthor/@author.ID" class="btn btn-danger " style="background-color:darkred" onclick="return confirm(' Are you sure you want to delete Author:\n @author.NAME @author.SURNAME')">Delete</a></td>
            <td ><a href="/Author/GetAuthor/@author.ID" class="btn btn-info" style="background-color:darkseagreen;color:black">Update</a></td>
        </tr>
    }
</table>
<br />
<a style="margin-bottom:15px" href="/Author/AddAuthor/" class="btn btn-primary">Add New Author</a>

